<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title><%- typeof title !== 'undefined' ? title + ' - ' : '' %>Agendero</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <%- typeof style !== 'undefined' ? style : '' %>
</head>
<body>
    <div class="main-container">
        <!-- Menu Mobile Toggle -->
        <button class="mobile-menu-toggle" id="mobileMenuToggle">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <h1>Agendero</h1>
            </div>
            <ul class="nav-menu">
                <li class="nav-item <%= typeof currentPage !== 'undefined' && currentPage === 'dashboard' ? 'active' : '' %>">
                    <a class="nav-link" href="/dashboard">
                        <i class="fas fa-home"></i>
                        <%= t('menu.home') %>
                    </a>
                </li>
                <li class="nav-item <%= typeof currentPage !== 'undefined' && currentPage === 'agenda' ? 'active' : '' %>">
                    <a class="nav-link" href="/agenda">
                        <i class="fas fa-calendar-alt"></i>
                        <%= t('menu.agenda') %>
                    </a>
                </li>
                <li class="nav-item <%= typeof currentPage !== 'undefined' && currentPage === 'company' ? 'active' : '' %>">
                    <a class="nav-link" href="/company">
                        <i class="fas fa-building"></i>
                        <%= t('menu.company') %>
                    </a>
                </li>
                <li class="nav-item <%= typeof currentPage !== 'undefined' && currentPage === 'settings' ? 'active' : '' %>">
                    <a class="nav-link" href="/settings">
                        <i class="fas fa-cog"></i>
                        <%= t('menu.settings') %>
                    </a>
                </li>
                <li class="nav-item mt-auto">
                    <form action="/auth/logout" method="POST" class="nav-link">
                        <button type="submit" class="btn btn-link text-danger p-0" style="text-decoration: none;">
                            <i class="fas fa-sign-out-alt"></i>
                            <%= t('menu.logout') %>
                        </button>
                    </form>
                </li>
            </ul>
        </aside>

        <!-- Content -->
        <main class="content">
            <%- body %>
        </main>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <%- typeof script !== 'undefined' ? script : '' %>
    <script>
        // Mobile menu toggle
        document.getElementById('mobileMenuToggle').addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('active');
        });
    </script>
</body>
</html>
